<Window x:Class="YouTubeDownloaderDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeDownloaderDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="WelcomeText" Content="Type in the YouTube URL:" HorizontalAlignment="Left" Margin="82,105,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="YouTubeURL" HorizontalAlignment="Left" Height="23" Margin="82,136,0,0" TextWrapping="Wrap" Text="YouTube URL" VerticalAlignment="Top" Width="317"/>
        <Button x:Name="startDownload" Content="Download!" HorizontalAlignment="Left" Margin="82,182,0,0" VerticalAlignment="Top" Width="75" Click="startDownload_Click"/>

    </Grid>
</Window>
