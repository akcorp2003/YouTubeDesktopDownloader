<Window x:Class="YouTubeDownloaderDesktop.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeDownloaderDesktop"
        mc:Ignorable="d"
        Title="Settings" Height="257.455" Width="328.978" Loaded="Window_Loaded">
    <Grid Margin="0,0,-8,-21">


        <Label x:Name="label" Content="Save Directory:" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" ToolTip="The directory path you want to save your music and videos in."/>
        <TextBox x:Name="saveDirectory" HorizontalAlignment="Left" Height="23" Margin="10,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201"/>
        <Button x:Name="button" Content="Browse..." HorizontalAlignment="Left" Margin="232,77,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.493,0.55" Click="button_Click"/>
        <Button x:Name="saveSettings" Content="OK" HorizontalAlignment="Left" Margin="232,185,0,0" VerticalAlignment="Top" Width="75" Click="saveSettings_Click"/>


    </Grid>
</Window>
