<Window x:Class="YouTubeDownloaderDesktop.Progress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeDownloaderDesktop"
        mc:Ignorable="d"
        Title="Progress" Height="206.864" Width="478.477" ContentRendered="Window_ContentRendered">
    <Grid Margin="0,0,-8,-5">
        <Border Background="GhostWhite" BorderBrush="BlanchedAlmond" BorderThickness="1" HorizontalAlignment="Left" Height="125" Margin="53,28,0,0" VerticalAlignment="Top" Width="387" />


        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="10" Margin="166,115,0,0" VerticalAlignment="Top" Width="100" IsIndeterminate="True" Orientation="Horizontal" />
        <TextBlock x:Name="updateText" HorizontalAlignment="Left" Margin="81,57,0,0" TextWrapping="Wrap" Text="Downloading your video! This may take a while depending on the size of your file." VerticalAlignment="Top" Width="330"/>
        <Button x:Name="confirmFinished" Content="OK" HorizontalAlignment="Left" Margin="207,110,0,0" VerticalAlignment="Top" Width="75" Visibility="Hidden" Click="confirmFinished_Click" />


    </Grid>
</Window>
